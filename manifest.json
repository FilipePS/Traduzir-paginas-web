{
    "manifest_version": 2,
    "default_locale": "en",
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "7.7",
    "homepage_url": "https://github.com/FilipePS/Traduzir-paginas-web",

    "commands": {
        "toggle-translation": {
            "suggested_key": {
                "default": "Alt+T"
            },
            "description": "Switch between the translated and the original page."
        }
    },

    "icons": {
        "32": "icons/google-translate-32.png",
        "64": "icons/google-translate-64.png",
        "128": "icons/google-translate-128.png"
    },

    "permissions": [
        "<all_urls>",
        "storage",
        "activeTab",
        "contextMenus"
    ],

    "web_accessible_resources": [
        "icons/google-translate-32.png",
        "icons/yandex-translate-32.png",
        "icons/swap-32.png"
    ],

    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false,
        "browser_style": false
    },

    "browser_action": {
        "browser_style": false,
        "default_icon": "icons/google-translate-32.png",
        "default_title": "__MSG_pageActionTitle__"
    },

    "page_action": {
        "browser_style": false,
        "default_icon": "icons/google-translate-32.png",
        "default_title": "__MSG_pageActionTitle__",
        "default_popup": "popup/popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "all_frames": true,
            "js": ["languages.js", "config.js", "showOriginal.js", "pageTranslator.js"]
        }, {
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "all_frames": false,
            "js": ["scripts/mobile.js"]
        }
    ],

    "background": {
        "scripts": ["languages.js", "translationCache.js", "translationService.js", "config.js", "background.js"]
    }
}